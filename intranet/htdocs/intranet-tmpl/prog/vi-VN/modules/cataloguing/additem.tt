 [% ELSE %]
 <th>
 [% END %]
 [% item_header.header_value %]
 </th>
 [% END %]
 </tr>
 </thead>
 <tbody>
 [% FOREACH item_loo IN item_loop %]
 [% IF ( item_loo.itemnumber == itemnumber) %]
